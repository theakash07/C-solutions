#include<stdio.h>
int main()
{
    int rows,count;
    printf("enter number of rows:\n");
    scanf("%d",&rows);
    for(int i=1;i<=rows;i++)
    {
        count=2;
        for(int j=1;j<=i;j++)
        {

            if(i!=rows)
            {
                if (j==1||j==i)
                printf("*");
            if (count<i)
            {
                for (int k=2;k<i;k++)
                {
                printf(" ");
                count++;
                }
            }
            }
            else
             printf("*");

        }
        printf("\n");
    }
}
