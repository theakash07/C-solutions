//Write a program in C to display the n terms of harmonic series and their sum
#include<stdio.h>
int main()
{
  int i,n;
  float sum=0;
  printf("enter number of terms:");
  scanf("%d",&n);
  for(i=1;i<=n;i++)
  {  
     
    /*printf("1/%d+",i);
    sum+=(float)i;*/
   if(i<n)
  {
    printf("1/%d +",i);
    sum+=1/(float)i;
  }
  if(i==n)
  {
    printf("1/%d + ",i);
    sum+=1/(float)i;
  }
  
}
printf("the sum is %0.2f",sum);
}
